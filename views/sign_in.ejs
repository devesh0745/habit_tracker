<!--Sign-in page-->
<h1 id="main-heading">Habit Tracker</h1>
<div id="login-page">
    <h2>Sign-in</h2>
  <form action="/users/create-session" method="post">
      <div class="col-md-10">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
        <div id="emailHelp" class="form-text" style="color: black;">We'll never share your email with anyone else.</div>
      </div>
      <div class="col-md-10">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="password">
      </div>
      <button id="sign-up-btn" style="color: black;border-color: black;" type="submit" value="Sign-up" class="btn btn-outline-secondary">Sign in</button>
  </form>
</div>
